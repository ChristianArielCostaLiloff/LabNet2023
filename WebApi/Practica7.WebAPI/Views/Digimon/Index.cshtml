@model List<Practica3_EF.Entities.Dtos.DtoDigimon>
@{
    ViewBag.Title = "Lista de digimons";
}

<h2>Lista de digimons</h2>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Imagen</th>
            <th scope="col">Nombre</th>
            <th scope="col">Nivel</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var digimon in Model)
        {
            <tr>
                <td>
                    <img src="@digimon.Image" height="100" />
                </td>
                <td>@digimon.Name</td>
                <td>@digimon.Level</td>
            </tr>
        }
    </tbody>
</table>
